<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gd.dao.UserFootDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.gd.model.UserFoot">
        <id column="id" property="id" />
        <result column="itemId" property="itemId" />
        <result column="productName" property="productName" />
        <result column="userId" property="userId" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id AS id, itemId AS itemId, productName AS productName, userId AS userId, create_time AS createTime, update_time AS updateTime
    </sql>

    <!-- 通用查询映射结果 -->
    <resultMap id="UserFootVo" type="com.gd.model.UserFootVo">
        <result column="id" property="id"/>
        <result column="itemId" property="itemId"/>
        <result column="userId" property="userId"/>
        <result column="productName" property="productName"/>
        <result column="mainimg1" property="mainimg1"/>
        <result column="originalPrice" property="originalPrice"/>
    </resultMap>

    <sql id="queryUserFootList">
       f.id AS id,f.userId AS userId,f.itemId AS itemId , f.productName AS productName,i.mainimg1 As mainimg1,a.originalPrice AS originalPrice
    </sql>

    <select id="queryUserFootByUserId" resultMap="UserFootVo" parameterType="java.lang.Integer">
        select <include refid="queryUserFootList" />
        from user_foot f
        inner join btoc_item i on i.id = f.itemId
        inner join btoc_area_item a on a.itemId = f.itemId
        where 1=1
        <if test="userId != null">
            and  f.userId =#{userId}
        </if>
        order by f.update_time desc
    </select>

</mapper>
